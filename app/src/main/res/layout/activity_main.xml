<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFD28D"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/openContacts"
        android:layout_width="111dp"
        android:layout_height="115dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="32dp"
        android:adjustViewBounds="true"
        android:backgroundTint="#00A26D6D"
        android:contentDescription="@string/contactsButton"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toStartOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/contact_icon1_fix" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="247dp"
        android:layout_height="154dp"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="25dp"
        android:contentDescription="@string/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/openContacts"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_crop" />

    <ImageButton
        android:id="@+id/mainIcon"
        android:layout_width="408dp"
        android:layout_height="405dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="160dp"
        android:backgroundTint="#00A25353"
        android:contentDescription="@string/mainLogo"
        android:foregroundTint="#00B18585"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:srcCompat="@drawable/send_message" />

    <ImageButton
        android:id="@+id/getuserinput"
        android:layout_width="356dp"
        android:layout_height="95dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#00974E4E"
        android:contentDescription="@string/getuserinput"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainIcon"
        app:srcCompat="@drawable/update_message_button_shadow" />

</android.support.constraint.ConstraintLayout>